<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="HomeButton">
        <item name="android:background">@drawable/selector_circle_green</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_marginBottom">@dimen/_7sdp</item>
        <item name="android:layout_width">@dimen/_55sdp</item>
        <item name="android:layout_height">@dimen/_55sdp</item>
    </style>

    <style name="PlayScreenButton">
        <item name="android:layout_width">@dimen/_150sdp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/selector_rec_green</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_marginBottom">@dimen/_7sdp</item>
    </style>
</resources>
